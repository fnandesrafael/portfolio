{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@context/*": ["src/context/*"],
      "@assets/*": ["src/assets/*"]
    },
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
  },
}
