{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@context/*": ["src/context/*"],
      "@assets/*": ["src/assets/*"],
      "@constants/*": ["src/constants/*"]
    },
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*", "tailwind.config.js", "postcss.config.js"],
  "ts-node": {
    "esm": true
  },
}

