{
  "plugins": ["stylelint-order"],
  "extends": ["stylelint-config-standard"],
  "overrides": [
    {
      "files": ["**/*.styles.jsx"],
      "customSyntax": "postcss-styled-components"
    }
  ],
  "rules": {
    "order/properties-alphabetical-order": true,
    "value-keyword-case": ["lower", {"ignoreKeywords": ["/^POSTCSS.*/"]}]
  }
}
